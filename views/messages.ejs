<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Snapgram</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/fontawesome-web/css/all.css">
    <link rel="stylesheet" href="/css/fontawesome-web/css/all.min.css">
    <link rel="stylesheet" href="/css/custom/pages.css">
    <link rel="stylesheet" href="/css/custom/text.css">
    <link rel="stylesheet" href="/css/custom/all.css">
    <link rel="stylesheet" href="/css/custom/messages.css">
</head>
<body id="body">
    <section class="pages-section">
        <div class="row">
            <div class="col-12 col-md-3 col-lg-3 col-xl-2 order-1 order-md-1">
                <div id="sidebar" class="sidebar" role="navigation">
                    <!-- sidebar -->
                    <%- include('sidebar') %>
                </div>

            </div>
            <div class="col-12 col-md-9 col-lg-9 col-xl-10 order-2 order-md-2 page-content" role="main" style="width: 100%;height: 100vh;max-height: 100vh;overflow-x: hidden;overflow-y: scroll;">
                <div class="cust-container">
                    <div class="message-head">
                        <div>
                            <img class="profile-photo mb-3" src="/images/pages/profile-1.jpg" alt="profile-photo">
                            <span class="username" style="color: aliceblue;"><%=recc.username%> (<%=recc.name%>)</span>
                        </div>
                    </div>
                    <% messages.forEach((m)=>{%>
                        <% if(m.sender==user.id){ %>
                            <div class="message-box sent ml-auto mb-3">
                                <span class="message-text"><%=m.text%></span>
                            </div>
                        <%}%>
                       
                        <%if(m.sender == recc.id){%>
                            <div class="message-box receive mb-3">
                                <span class="message-text"><%=m.text%></span>
                            </div>
                        <%}%>
                    <%})%>
                    
                    
                 

                    <div style="height: 50px;width: 100%;background-color: transparent;"></div>
                    <div class="message-typing" style="position: fixed;bottom: 0;right: 0;width: 100%;">
                        <form action="/message/<%=recc.username%>" method="post">
                            <div class="form-group form-row " style="background-color: black;">
                                <div class="col-8 offset-2">
                                    <input type="text" class="form-control form-control-lg form-control-dark" name="text" style="border-radius: 20px;">
                                </div>
                                <div class="col-2">
                                    <button type="submit" class="btn btn-primary btn-block btn-lg btn-dark" style="border-radius: 20px;">Sent</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </section>


    <script src="../static/js/jquery.min.js"></script>
    <script src="../static/js/bootstrap.min.js"></script>
    <script>
        $('#a2').addClass('sidebar-item-active')
    </script>
</body>
</html>